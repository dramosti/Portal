@model HLP.Portal.MVC.Models.Registration.UserModel
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Portal.cshtml";
}
<fieldset>

    <div class="container">
        <div class="row clearfix">
            <div class="col-md-6 column">
                <fieldset>
                    <legend>
                        Log in
                    </legend>
                </fieldset>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-md-6 column">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "Login Failed, check details");
                    <div>
                        @Html.LabelFor(c => c.xEmail)
                        @Html.TextBoxFor(x => x.xEmail, new { @class = "form-control", autofocus = "autofocus", placeholder = "seuemail@exemplo.com" })
                        @Html.ValidationMessageFor(x => x.xEmail)
                    </div>
                    <div>
                        @Html.LabelFor(c => c.xSenha)
                        @Html.PasswordFor(x => x.xSenha, new { @class = "form-control", autofocus = "autofocus", placeholder = "senha" })
                        @Html.ValidationMessageFor(x => x.xSenha)

                    </div>
                    <br />
                    <div>
                        <input type="submit" id="Login" value="Log in" class="btn btn-primary" />
                    </div>

                    <div class="control-group">
                        <div class="controls">
                            <label class="checkbox">
                                @Html.CheckBoxFor(c => c.bRemember, new { @class = "checkbox", autofocus = "autofocus" })
                                Remember me
                            </label>
                            <a href="Recovery">Esqueceu sua senha?</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


</fieldset>