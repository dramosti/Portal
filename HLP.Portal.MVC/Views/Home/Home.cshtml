@model HLP.Portal.MVC.Models.Adm.HomeModel
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Portal.cshtml";
}

<fieldset>

    <div class="container">
        <div class="row clearfix">
            <div class="col-md-6 column">
                <fieldset>
                    <legend>
                        <em style="padding-left:20px"> HLP Estratégia em Software</em>
                    </legend>
                </fieldset>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row clearfix">
            <div class="col-md-12 column">
                <div class="row clearfix">
                    <div class="col-md-12 column">
                        <div class="carousel slide" id="carousel-933315">
                            <div class="carousel-inner">

                                @foreach (var noticia in Model.CarrosselNoticias)
                                {
                                    if (@noticia.Imagens.Count() > 0)
                                    {
                                        <div class="item">
                                            @*<img src="@noticia.Imagens.Where(c=> c.stPrincipal).FirstOrDefault().xUrlImg" />*@
                                            <img src="~/Content/Images/carrossel_2.jpg" />
                                            <div class="carousel-caption">
                                                <h4>
                                                    @noticia.xTitulo
                                                </h4>

                                                <p>
                                                    @noticia.xNoticia
                                                </p>
                                            </div>
                                        </div>
                                    }
                                }
                            </div> <a class="left carousel-control" href="#carousel-933315" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a> <a class="right carousel-control" href="#carousel-933315" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</fieldset>
